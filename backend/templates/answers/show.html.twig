{% extends 'base.html.twig' %}

{% block title %}Answers{% endblock %}

{% block body %}
    <h1>Answers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ answer.value }}</td>
            </tr>
            <tr>
                <th>Is_correct</th>
                <td>{{ answer.isCorrect ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_answers_index') }}">back to list</a>

    <a href="{{ path('app_answers_edit', {'id': answer.id}) }}">edit</a>

    {{ include('answers/_delete_form.html.twig') }}
{% endblock %}
